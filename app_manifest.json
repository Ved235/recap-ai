{
    "display_information": {
        "name": "Recap AI",
        "description": "AI-powered summaries for Slack channels & Threads",
        "background_color": "#d32600"
    },
    "features": {
        "bot_user": {
            "display_name": "Recap AI",
            "always_online": true
        },
        "shortcuts": [
            {
                "name": "Recap",
                "type": "message",
                "callback_id": "app_shortcut",
                "description": "Generate a summary of this thread"
            }
        ],
        "slash_commands": [
            {
                "command": "/recap",
                "url": "https://slack-ai-phi.vercel.app/slack/events",
                "description": "Summarize messages",
                "usage_hint": "[<time window> (in days)] [#channel â€¦]",
                "should_escape": true
            }
        ]
    },
    "oauth_config": {
        "scopes": {
            "bot": [
                "channels:history",
                "chat:write",
                "commands",
                "groups:history",
                "users.profile:read",
                "users:read",
                "app_mentions:read",
                "im:write"
            ]
        }
    },
    "settings": {
        "interactivity": {
            "is_enabled": true,
            "request_url": "https://slack-ai-phi.vercel.app/slack/events"
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": false,
        "token_rotation_enabled": false
    }
}